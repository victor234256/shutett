{
  "version": 2,
  "builds": [
    {
      "src": "vite.config.js",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    },
    {
      "src": "api/redirect.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/$1"
    },
    {
      "src": "/:shorturl",
      "dest": "/api/redirect?shorturl=:shorturl"
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ]
}
